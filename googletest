package com.span.testgoogle;

import java.util.Iterator;
import java.util.List;
import java.util.concurrent.TimeUnit;

import org.openqa.selenium.By;
import org.openqa.selenium.NoAlertPresentException;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.firefox.FirefoxDriver;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;
import org.testng.annotations.AfterTest;
import org.testng.annotations.BeforeTest;
import org.testng.annotations.Test;

public class TestRun {
	
	  private WebDriver driver;
	  private String baseUrl;
	  private WebElement searchField, searchSuggestions;

	  @BeforeTest
	  public void setUp() throws Exception {
	    driver = new FirefoxDriver();
	    baseUrl = "https://www.google.co.in";
	    driver.manage().timeouts().implicitlyWait(45, TimeUnit.SECONDS);
	  }

	  @Test
	  public void testUntitled() throws Exception {
		  
		  driver.manage().window().maximize();
		  driver.get(baseUrl);
		  searchField = driver.findElement(By.xpath(".//input[@id='gbqfq']"));
		  searchField.sendKeys("span");
		  WebDriverWait wait= new WebDriverWait(driver, 20);
		  wait.until(ExpectedConditions.visibilityOfElementLocated(By.xpath(".//ul[@class='sbsb_b']")));
		  searchSuggestions = driver.findElement(By.xpath(".//ul[@class='sbsb_b']"));
		  List<WebElement> suggestions = searchSuggestions.findElements(By.xpath(".//div[@class='sbqs_c']"));
		  Iterator<WebElement> it = suggestions.iterator();
		  while(it.hasNext()){
			  WebElement row = (WebElement) it.next();
			  System.out.println(row.getText());
		  }
		  
		  
		Thread.sleep(30000);
	  } 
	  
	 @AfterTest
	  public void tearDown() throws Exception {
	    driver.quit();
	  }

}

